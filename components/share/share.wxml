<template name="share">
    <block wx:if="{{shareList.length==0}}" >
            <view style="overflow:hidden" bindtap="handleDetailIntroduce">
                        <text style="font-size:20rpx;float:left;padding:0 10rpx;margin-left:30rpx;border:1px solid #979797;border-radius:20rpx;margin-top:20rpx"> {{item.type=="txvVideo"?'视频':'文章'}} </text>
                        <view style="float:left;height:80rpx" >
                            
                            <view class="letterBox">
                                <view class="nowrapBig">功能介绍：终于知道分享的内容被谁读了</view>
                                
                            </view>
                        </view>
                    </view>
                    <block style="margin-left:100rpx">
                        <view style="margin-left:30rpx;">
                            <view class="readNum" style="float:left;color:#999999;margin-left:100rpx">已有<text  style="color:#333"> 8 </text>位好友阅读</view>
                            <scroll-view style="height:150rpx;margin-left:100rpx" scroll-x="true">
                                <image class="avatarReadS" src="/images/p1.png"></image>
                                <image class="avatarReadS" src="/images/p2.png"></image>
                                <image class="avatarReadS" src="/images/p3.png"></image>
                                <image class="avatarReadS" src="/images/p4.png"></image>
                                <image class="avatarReadS" src="/images/p5.png"></image>
                                <image class="avatarReadS" src="/images/p6.png"></image>
                                <image class="avatarReadS" src="/images/p7.png"></image>
                                <image class="avatarReadS" src="/images/p8.png"></image>
                            </scroll-view>

                        </view>
                        

                    </block>
    </block> 

    <block wx:if="{{shareList.length>0}}" >
        <view wx:for="{{shareList}}" class="container"  wx:key="{{index}}" style="background:#fff;padding-top:20rpx">
            <view data-id="{{item.id}}"  >
                <view style="width:96%;margin-left:4%;border-bottom:1px solid #E0E0E0;overflow:hidden">
                    <view style="overflow:hidden">
                        <text style="color:#979797;font-size:20rpx;float:left;padding:0 10rpx;margin-left:30rpx;border:1px solid #979797;border-radius:20rpx;margin-top:20rpx"> {{item.type=="txvVideo"?'视频':'文章'}} </text>
                        <view bindtap="handleDetail" data-id="{{item.entity.id}}" style="float:left;height:80rpx" >
                            
                            <view class="letterBox">
                                <view class="nowrapBig" style="color:#333">{{item.entity.title}}</view>
                                
                            </view>
                        </view>
                    </view>
                    <block wx:if="{{item.referencers.length>0}}" style="margin-left:100rpx">
                        <view style="margin-left:30rpx;">
                            <view class="readNum" style="float:left;color:#999999;margin-left:100rpx">已有<text style="color:#333"> {{item.referencers.length}} </text>位好友阅读</view>
                            <scroll-view style="height:150rpx;margin-left:100rpx" scroll-x="true">
                                <view wx:for="{{item.referencers}}" wx:key="{{index}}" style="display: inline-block;margin-top:10rpx" >
                                    <view wx:if="{{item.avatarUrl}}">
                                        <image class="avatarRead" src="{{item.avatarUrl}}"></image>
                                    </view>
                                    <view wx:else wx:key="{{item.id}}">
                                        <image class="avatarReadS" src="/images/shenmi.png"></image>
                                    </view>
                                </view>
                            </scroll-view>

                        </view>
                        

                    </block>
                    <block wx:else>
                        <button  open-type="share" data-item="{{item}}" class="readNum" style="background: #ffffff;padding-bottom:40rpx;">
                            <view class="readNum" style="float:left;color:#999999">已有<text style="color:#333"> 0 </text> 位好友阅读</view>
                            <view style="float:left;color:#FFDB3D;border:1px solid #FFDB3D;font-size:24rpx;margin-left:30rpx;width:80rpx;height:40rpx;line-height:40rpx;padding:2rpx 6rpx;">问问Ta</view>
                        </button>
                    </block>
                </view>

            </view>
        </view> 
        <view wx:if="{{isMore}}" style="width:100%; height:60rpx;font-size: 28rpx;text-align: center;line-height: 60rpx;">
        </view>
       <view wx:else style="width:100%; height:200rpx;font-size: 28rpx;text-align: center;line-height: 200rpx;">
            <view style='height:50rpx;'> <image src="/images/logo.png" style="width:32rpx;height:32rpx;margin-right: 16rpx"></image>由小鱼聚合平台提供技术支持</view>
            <!-- <view style="text-align:center;dispaly:block">产品意见反馈请添加微信：13264256564</view> -->
        </view>
    </block>
    <block>
        <view wx:if="{{shareList.length==0}}" style="text-align: center;margin-top: 20rpx">
            <view>
                <image src="{{imgCry}}" style="width: 140rpx;height: 140rpx;"></image>
            </view>
            <view>
                <text style="font-size: 28rpx;color: #c3c3c3">分享为空</text>
            </view>
        </view>
    </block>


</template>