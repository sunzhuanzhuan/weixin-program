<template name="share">
        <view wx:if="{{shareList.length>0}}" wx:for="{{shareList}}" class="container"  wx:key="{{index}}">
            <view class="box"  data-id="{{item.id}}"  >
                <view class="bigBox">
                    <view class="imgBox" bindtap="handleDetail" data-id="{{item.article.id}}" >
                        <image class="img" src="{{item.article.coverUrl}}" lazy-load></image>
                        <view class="letterBox">
                            <view class="nowrap">{{item.article.title}}</view>
                            <text class="letterArtical">查看阅读文章>>></text>
                        </view>
                    </view>
                    <view class="bottomLine"></view>
                    <block wx:if="{{item.referencers.length>0}}">
                        <view style="margin-top: 24rpx">
                            <view class="readNum">已有<text>{{item.referencers.length}}</text>位好友阅读</view>
                            <view style="margin-top: 24rpx" class="{{shinIndex ==index?heightFlag?'avatarBox':'noHeightAvatarBox':'avatarBox'}}">
                                <view wx:for="{{item.referencers}}" wx:key="{{index}}" style="display: inline-block" >
                                    <view wx:if="{{item.avatarUrl}}">
                                        <image class="avatarRead" src="{{item.avatarUrl}}"></image>
                                    </view>
                                    <text wx:else class="avatarReadS" wx:key="{{item.id}}">神秘人</text>
                                </view>
                            </view>

                        </view>
                        <view bindtap="handleShrink" class="shrinkContent" data-id="{{index}}">
                            <image class="arrow" src="{{shinIndex ==index?heightFlag?('../../images/arrowUp.png'):('../../images/arrowDown.png'):('../../images/arrowUp.png')}}"></image>
                            <text>{{shinIndex ==index?heightFlag?'展开':'收起':'展开'}}</text>
                        </view>

                    </block>
                    <block wx:else>
                        <button  open-type="share"  class="readNum" style="padding-bottom: 20rpx;background: #ffffff;border:none;padding-left: 0;margin-top: 24rpx">
                        <view>好友还没有阅读，快去问问他吧</view>
                        </button>
                    </block>
                </view>

            </view>
        </view>
        <view wx:if="{{shareList.length==0}}" style="text-align: center;margin-top: 20rpx">
            <view>
                <image src="{{imgCry}}" style="width: 140rpx;height: 140rpx;"></image>
            </view>
           <view>
               <text style="font-size: 28rpx;color: #c3c3c3">分享为空</text>
           </view>
        </view>
</template>