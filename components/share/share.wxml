<template name="share">
    <view wx:for="{{shareList}}" class="container">
        <view  class="box" >
            <view class="bigBox">
                <view class="imgBox">
                    <image class="img" src="{{item.img}}" lazy-load></image>
                    <view class="letterBox">
                        <view class="nowrap">{{item.title}}</view>
                        <text class="letter">查看阅读文章>>></text>
                    </view>
                </view>
                <view class="bottomLine"></view>
                <view>
                    <view class="readNum">已有<text>{{item.num}}</text>位好友阅读</view>
                    <view class="{{shinIndex ==index?heightFlag?'avatarBox':'noHeightAvatarBox':'avatarBox'}}">
                        <image  wx:for="{{item.avatar}}" class="avatarRead" src="{{item}}"></image>
                    </view>

                </view>
                <view bindtap="handleShrink" class="shrinkContent" data-id="{{index}}">
                    <image class="arrow" src="{{shinIndex ==index?heightFlag?('../../images/arrowUp.png'):('../../images/arrowDown.png'):('../../images/arrowUp.png')}}"></image>
                    <text>{{shinIndex ==index?heightFlag?'展开':'收起':'展开'}}</text>
                </view>
            </view>

        </view>
    </view>
</template>