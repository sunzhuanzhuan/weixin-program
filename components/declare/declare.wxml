<template name="declare">
	<view class="declareBox">
		<view class="leftBox marginLeft26">表态</view>
		<view class="rightBox">
			{{item.title}}
		</view>
		<view class="taiBox marginLeft26">
			<view class="taiLeftBox">
				<view class="fontTai">{{item.surveyOptions[0].description}}</view>
				<button disabled="{{item.voteFor[0] ==undefined?false:item.voteFor[0] ==item.surveyOptions[0]._id?false:true}}" class="holdOne"
				 data-item="{{item}}" data-num="0" bindtap="handleSupport">{{item.voteFor[0] !=undefined ?item.voteFor[0] ==item.surveyOptions[0]._id ?'已支持':'未支持':'支持'}}</button>
			</view>
			<view class="taiRightBox">
				<view class="fontTai">{{item.surveyOptions[1].description}}</view>
				<button disabled="{{item.voteFor[0] ==undefined?false:item.voteFor[0] ==item.surveyOptions[1]._id?false:true}}" class="holdTwo"
				 data-item="{{item}}" data-num="1" bindtap="handleSupport">{{item.voteFor[0] !=undefined?item.voteFor[0] ==item.surveyOptions[1]._id ?'已支持':'未支持':'支持'}}</button>
			</view>
		</view>
		<view class="progressBox marginLeft26">
			<view wx:if="{{item.surveyOptions[0].supporters.length ==0 && item.surveyOptions[1].supporters ==0}}">
				<view class="leftPro" style="width:96%;background:#EBEBEB;"></view>
			</view>
			<view wx:else>
				<view style="float: left;">
					<view class="leftPro" style="width:{{item.m*6.40}}rpx"></view>
				</view>
				<view style="float: left;margin-right:-10rpx;">
					<view class="rightPro" style="width:{{item.n*6.40}}rpx"></view>
				</view>
			</view>
		</view>
		<view class="percentBox marginLeft26">
			<view class="leftPercent fontPercent">{{(item.m)}}%</view>
			<view class="rightPercent fontPercent">{{item.n}}%</view>
		</view>
		<view class="view">
			<view class="leftView">
				<image wx:for="{{item.surveyOptions[0].supporters}}" src="{{item.avatarUrl}}" class="touxiang {{item.surveyOptions[0].supporters.length>0?'many':''}}"></image>
			</view>
			<view class="rightView">
				<view style="float:right;margin-right: 40rpx">
					<image wx:for="{{item.surveyOptions[1].supporters}}" src="{{item.avatarUrl}}" class="touxiang {{item.surveyOptions[0].supporters.length>0?'many':''}}"></image>

				</view>
				<view style="float: right;margin-top: 20rpx;margin-right: 30rpx;">
					<view class="dotDeclare"></view>
					<view class="dotDeclare" style="opacity: 0.6;margin:0 6rpx;"></view>
					<view class="dotDeclare" style="opacity: 0.4;"></view>
				</view>


			</view>
		</view>
	</view>
</template>
