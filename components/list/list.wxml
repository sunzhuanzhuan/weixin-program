<template name="list">

    <block  wx:if="{{list.length>0}}" >
        <view wx:for="{{list}}" class="container"  wx:key="{{index}}">
            <view wx:if="{{!(item.wxMidVec && item.wxMidVec[item.wxMidVec.length-1] == '1')}}" bindtap="handleDetail" data-id="{{item.id}}">
                <view class="bigBox">
                    <view class="imgBox" >
                        <image class="img" mode="aspectFill" src="{{item.coverUrl}}" lazy-load></image>
                        <view class="letterBox ">
                            <view class="nowrap">{{item.title}}</view>
                            <view class="letter">
                                <text class="ellipsisLike">{{item.sourceWxNickname}}</text>
                                <text class="time">{{item._publishedFromNow}}</text>
                                <text class="time flright">{{item.readTimes}}阅读</text>
                            </view>
                        </view>
                    </view>
                </view>

            </view>
            <view wx:else bindtap="handleDetail"  data-id="{{item.id}}">
                <view class="bigBox">
                    <view>
                        <view class="content">
                            <image class="bigImg" mode="aspectFill" src="{{item.coverUrl}}" lazy-load style="{{index==0?'margin-top:0':'margin-top:32rpx'}}"></image>
                            <view class="nowrapBig">{{item.title}}</view>
                        </view>
                        <view>
                            <view class="readResource">
                                <text class="ellipsisLike">{{item.sourceWxNickname}}</text>
                                <text class="time">{{item._publishedFromNow}}</text>
                                <text class="time flright">{{item.readTimes}}阅读</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view wx:if="{{isMore}}" style="width:100%; height:60rpx;font-size: 28rpx;text-align: center;line-height: 60rpx;">
        </view>
        <view wx:else style="width:100%; height:200rpx;font-size: 28rpx;text-align: center;line-height: 200rpx;">
            <image src="/images/logo.png" style="width:32rpx;height:32rpx;margin-right: 16rpx"></image>由小鱼聚合平台提供技术支持
        </view>
    </block>
    <block wx:else>
        <view style="width: 100%;height: 1000rpx;"></view>
        <view wx:if="{{isMore}}" style="width:100%; height:60rpx;font-size: 28rpx;text-align: center;line-height: 60rpx;position: fixed;bottom: -800rpx">

        </view>
        <view wx:else style="width:100%; height:200rpx;font-size: 28rpx;text-align: center;line-height: 200rpx;">
            <image src="/images/logo.png" style="width:32rpx;height:32rpx;margin-right: 16rpx"></image>由小鱼聚合平台提供技术支持
        </view>
    </block>


</template>