
<import src="/components/like/like.wxml" />
<import src="/components/share/share.wxml" />
<view>
    <view style="width:100%;height:420rpx;background:#fff;position:relative">
        
            
            <view >
                <view style="display:inline-block;width:50%;height:420rpx;float:left">
                    <button class="nickName" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
                        <image style="width: 200rpx;height: 200rpx;border-radius: 50%;" src="{{userInfo.avatarUrl?userInfo.avatarUrl:'../../images/noAvator.png'}}"></image>
                        <view  class="avatar" style="text-aligin:center">{{userInfo.nickName?userInfo.nickName:'我要登录'}}</view></button>
                </view>
                <view style="display:inline-block;width:50%;height:420rpx;float:right">
                
                    <view >
                        
                        <view style="font-size:24rpx;color:#999999">阅读</view>
                        <view style="font-size:44rpx;color:#333">{{userInfo ? num.read : ''}}</view>
                    </view>
                    <view style="margin-top:20rpx">
                        
                        <view style="font-size:24rpx;color:#999999">分享</view>
                        <view style="font-size:44rpx;color:#333">{{userInfo ? num.shared : ''}}</view>
                    </view>
                    <view style="margin-top:20rpx">
                        <button style="width:200rpx;height:60rpx;font-size:28rpx;line-height:60rpx;border:1px solid #666;border-radius:50rpx;background:#fff;margin-top:20rpx;float:left;" open-type="contact" show-message-card="true" bindcontact="handleContact" send-message-img='/images/clickMe.jpg' >意见反馈</button>
                    </view>
                    
                </view>
             </view>

            <view style="margin:0 28rpx;width:698rpx;height:160rpx;overflow:hidden;clear:both;box-shadow: 0 2rpx 6rpx 6rpx #f4f4f4;;position:absolute;bottom:-100rpx">
                <view bindtap="handleTapHistoryOrArticalOrVideo" data-name="history" style="display:inline-block;width:230rpx;height:160rpx;background:#fff;text-align:center;">
                    <image src="/images/history.png"  style="width:44rpx;height:44rpx;margin-top:32rpx;margin-bottom:16rpx"/>
                    <view style="font-size:24rpx;color:#333">浏览历史</view>
                </view>
                <text style="border-left:1px solid #E6E6E6;height:50rpx;display:inline-block;"></text>
                <view bindtap="handleTapHistoryOrArticalOrVideo"  data-name="artical"  style="display:inline-block;width:230rpx;height:160rpx;background:#fff;text-align:center">
                    <image src="/images/artical.png" style="width:44rpx;height:44rpx;margin-top:32rpx;margin-bottom:16rpx"/>
                    <view style="font-size:24rpx;color:#333">收藏的文章</view>
                </view>
                <text style="border-right:1px solid #E6E6E6;display:inline-block;height:50rpx;"></text>
                <view bindtap="handleTapHistoryOrArticalOrVideo"   data-name="video"  style="display:inline-block;width:230rpx;height:160rpx;background:#fff;text-align:center">
                    <image src="/images/video.png"  style="width:44rpx;height:44rpx;margin-top:32rpx;margin-bottom:16rpx"/>
                    <view style="font-size:24rpx;color:#333">收藏的视频</view>
                </view>
            </view>
        
        
    </view>
    <view  style="margin-top:140rpx;margin-left:30rpx;color:#333;font-size:36rpx;">我的分享</view>
    
    <view style="margin-top:20rpx">
        <scroll-view  enable-back-to-top="true">
            <template is="share" data="{{imgCry:imgCry,shareList:userInfo ? myShares : [],heightFlag:heightFlag,shinIndex:shinIndex,isMore: MySharesHasMore}}"/>
        </scroll-view>
        
    </view>
</view>

<!-- 悬浮回到首页 -->
<form name='pushMsgFm' report-submit='true' bindsubmit='getFormID'wx:if="{{isHome}}">
    <button form-type="submit" class="btnForm">
        <image src="/images/goHome.png" class="goHomeStyle" bindtap="handleBack"></image>
    </button>
</form>