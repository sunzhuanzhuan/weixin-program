<!--detail.wxml-->
<view>
  <view class="globalNavigate" style="{{iPhoneX?'top:50rpx;':''}}">
    <view  class="closeContainer" bindtap="handleCallBack">
        <image src="{{src}}" class="close"></image>
    </view>
    <view style="font-size: 14px;width:400rpx;overflow: hidden; height:90rpx;line-height:90rpx;white-space:nowrap">{{article.title}}</view>
  </view>
    <!--{{article.title}}-->
  <scroll-view scroll-y  style="position: absolute;{{iPhoneX?'top:210rpx;':'top:160rpx'}};height: 91%;"  bindscroll="recordUserscroll" >
      <!--播放视频的位置-->
      <view wx:if="{{videoSource.length>0}}"  style="heigh:200rpx;margin:0 24rpx;{{videoTop}}" >
          <view>
              <txv-video vid="{{videoId}}" playerid="video" autoplay="{{true}}" muted="{{isMuted}}"></txv-video>
          </view>
          <view wx:if="{{videoSource.length==1}}" style=" height:80rpx;margin: 30rpx 0;">
             <view  bindtap="handleIsMuted" style="width:100rpx; height: 70rpx;line-height:70rpx;float: right;text-align: center;margin-right: 30rpx;margin-top: -4rpx" >
                 <image style="width:40rpx; height: 40rpx;" src="{{isMuted?'/images/mute.png':'/images/noMute.png'}}"></image>
             </view>
              <text style="color: #E6E6E6;display:inline-block;height:40rpx;margin-right: 50rpx;float: right;"> | </text>
          </view>
          <view wx:else style="text-align: center;">
              <view wx:for="{{videoSource}}" data-videoId="{{index}}" bindtap="handleVideoTap" class="{{selectedCricle == index?'borderCircle':'borderNum'}}">
                  <text style="font-size: 24rpx">视频{{index+1}}</text>
              </view>
              <view  bindtap="handleIsMuted" style="width:100rpx; height: 70rpx;line-height:70rpx;float: right;text-align: center;margin-right: 30rpx;margin-top: 40rpx" >
                  <image style="width:40rpx; height: 40rpx;" src="{{isMuted?'/images/mute.png':'/images/noMute.png'}}"></image>
              </view>
              <text style="color: #E6E6E6;display:inline-block;height:40rpx;margin-right: 50rpx;float: right;margin-top: 40rpx"> | </text>
          </view>

      </view>
      <view wx:else></view>
     <rich-text class="_root" nodes="{{nodes}}"></rich-text>
  </scroll-view>
  <!--悬浮部分-->
  <view  class="fixed {{isShow?'show':''}} state1"  style="{{isIphoneX?'height:194rpx;':'height:134rpx'}}">
      <view class="floatShadow"></view>
      <view  style="display: flex;flex-direction: row;background: #ffffff">
          <view wx:if="{{isEyes}}" style="flex:3;visibility: hidden;{{isIphoneX?'height:194rpx':'height:134rpx'}}">123</view>
        <button wx:else class="leftBtn" bindgetuserinfo="handleAuthor" open-type="{{type}}"
                style="flex:3;{{isIphoneX?'height:194rpx':'height:134rpx'}}">
          <!--hidden="{{isEyes}}"-->
          <image class="eyeBtn" src="../../images/eye.png"></image>
            <text class="readLetter">让朋友知道我在读</text>
        </button>
        <button catchtap="handleLike" bindgetuserinfo="handleAuthor" open-type="{{type}}"
                style="opacity: 1;background:#ffffff;flex:1;position: relative;z-index: 2;{{isIphoneX?'height:194rpx':'height:134rpx'}}">

            <image  class="imgBtn" style="position: relative;z-index: 1;"
                    src="{{isLike?('../../images/shareLike.png'):('../../images/likeAfter.png')}}"></image>

        </button>
        <button open-type="{{type1}}" bindgetuserinfo="handleAuthor"
                style="border-color: #ffffff;opacity: 1;background:#ffffff;flex:1;position: relative;z-index: 2;{{isIphoneX?'height:194rpx':'height:134rpx'}}">
          <image src="{{shareButton}}" class="imgBtn" style="position: relative;z-index: 1;"></image>
        </button>

      </view>
    <view wx:if="{{isIphoneX}}" class="bol"></view>
    <view wx:else></view>
      </view>
  </view>
