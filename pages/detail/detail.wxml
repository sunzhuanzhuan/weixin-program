<!--detail.wxml-->
<view>
  <view class="globalNavigate" style="{{iPhoneX?'top:86rpx;':'top:40rpx'}}">
    <view style="width:2rem;text-align: left;padding-left: 20rpx;float: left" bindtap="handleCallBack">×</view>
    <view style="font-size: 14px;max-width:70%;text-align: center;float: left; overflow: hidden; height: 100%">{{article.title}}</view>
  </view>
  <scroll-view scroll-y  style="position: absolute;top:150rpx;height: 90%;">
     <rich-text class="_root" nodes="{{nodes}}" bindtouchstart="touchstart" bindtouchend="touchend"></rich-text>
    <!--页面最下面部分-->
    <view class="{{isShow?'':'marB'}}  bottomBox ">
      <view class="wxResource">
        <view> <text style="color:#878787;font-size:24rpx">原创 | {{article.author}}</text></view>
        <view><text style="color:#878787;font-size:24rpx">公众号来源 | {{article.sourceWxNickname}}</text></view>
      </view>
      <image src="http://www.liantu.com/images/2013/liantu.png" class="wxCode">
      </image>
    </view>
  </scroll-view>

  <!--悬浮部分-->
  <view class="fixed" hidden="{{isShow}}" style="{{isIphoneX?'height:194rpx':'height:134rpx'}}">
    <view>
      <view class="floatShadow"></view>
      <view hidden="{{isEyes}}" style="float:left;width: 60%;{{isIphoneX?'height:194rpx':'height:134rpx'}}">
        <button class="leftBtn" bindgetuserinfo="handleAuthor" open-type="getUserInfo">
          <image class="eyeBtn" src="../../images/eye.png"></image>
          <text class="readLetter">让朋友知道我在读</text>
        </button>
      </view>
      <image class='likeBtn' catchtap="handleLike" src="{{isLike?('../../images/shareLike.png'):('../../images/likeAfter.png')}}"></image>

      <image src="{{shareButton}}" class="imgBtn"></image>
      <button bindtap="handleShare" open-type="share" class="shareButton"></button>
    </view>
    <view wx:if="{{isIphoneX}}" class="bol"></view>
    <view wx:else></view>


  </view>



</view>
