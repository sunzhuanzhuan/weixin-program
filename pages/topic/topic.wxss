.parent{
    position: relative;
    height: 380rpx;
    width:100%;
}
.cover{
    height: 380rpx;
    width:100%;
    position: absolute;
    top:0;
}
.topicTitle{
    font-size: 34rpx;
    font-weight: bold;
    color: #fff;
    position: absolute;
    top: 204rpx;
    z-index:3;
    left:30rpx;
    margin:0;
    padding:0;
}
.topicDesc{
    font-size: 28rpx;
    color: #B3B3B3;
    position: absolute;
    top: 260rpx;
    width: 660rpx;
    left:30rpx;
    z-index:3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height:1.5

}
.specicalTopicBox{
    margin-top: 0;
    top:22rpx;
}
.mask{
    width:100%;
    height: 280rpx;
    position: absolute;
    z-index:2;
    top:100rpx;
    background: -webkit-linear-gradient( top,rgba(0, 0, 0,0),rgba(0, 0,0,1));
}
