.readBoxName{
  color: #898989;
  font-size: 28rpx;
  margin-top:14rpx ;
}
.contentList{
  overflow-x: hidden;
  width: 100%;
}
.contentListBox{
  position: absolute;
  top:240rpx;
  z-index: 20;
  height:82%
}
.lineTop{
  position: fixed;
  z-index: 26;
  width: 100%;
  height: 30rpx;
  opacity:0.04;
  background: -webkit-linear-gradient(180deg,rgba(0,0,0,1),rgba(0,0,0,0));/* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(180deg,rgba(0,0,0,1),rgba(0,0,0,0)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(180deg,rgba(0,0,0,1),rgba(0,0,0,0)); /* Firefox 3.6 - 15 */
  background: linear-gradient(180deg,rgba(0,0,0,1),rgba(0,0,0,0));
}
