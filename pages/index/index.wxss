.readBox{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.smallBox{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.avatar{
  border-radius: 50%;
  width:140rpx ;
  height:140rpx;
  background:#f6f6f6 ;
  text-align: center;

}
.chineseLetter{
  font-size:32rpx ;
  height: 44rpx;
  padding-right: 35rpx;
  margin-left:40rpx ;
  display: inline-block;
  position: relative;
}
.titleBox{
  width: 100%;
  height: 84rpx;
  display: flex;
  white-space: nowrap;
  position: fixed;
}
.plTop36{
  margin-top: 72rpx;
}
