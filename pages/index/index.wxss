}
.plBottm28{
  margin-bottom: 56rpx;
}
.line{
  height: 20rpx;
  background-color: #f6f6f6 ;
  margin-bottom: 40rpx;
}
.shareBox{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 70rpx;
}
.icon{
  height: 26rpx;
  width:26rpx;
  margin-right: 10rpx;
}
.selected{
  color:#333333;
  font-size: 28rpx;
  padding-bottom:26rpx ;
  border-bottom: 4rpx solid #333333;
}
.none{
  color: #ADADAD;
  font-size: 28rpx;
}
.ellipsisLike{
  width: 180rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display: inline-block;
  vertical-align: top;
}
.letter{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
  color: #898989;
}
.titleFontSize{
  color: #333333;
  font-weight: bolder;
}
.noTitleFontSize{
  color:#ADADAD;

}
