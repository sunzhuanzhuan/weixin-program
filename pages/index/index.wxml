<!--index.wxml-->
<import src="/components/share/share.wxml" />
<import src="/components/like/like.wxml" />
<import src="/components/list/list.wxml" />
<view class="containerBig" style="height: {{winHeight}}px;">

    <view style="height:88rpx;background:#ffffff;">
        <scroll-view  scroll-left="{{scrollLeft}}"  scroll-x
                      style="position:fixed;z-index:27;display:inline-block;margin-top: 0;height: 88rpx;width:calc({{winWidth-81}}px);background:#ffffff;white-space:nowrap;overflow: hidden">
           
           <view class="nav">
                
                <form name='pushMsgFm' report-submit='true' bindsubmit='getFormID'  wx:for="{{lists}}" class='tag-box' wx:key="id" style="display: inline-block">
                     
                    <button form-type="submit" hover-class='none' class="btnForm taga-item {{currentTabIndex==index?'bold':''}}"
                    style="font-size:32rpx;{{currentTabIndex==index?'color:#000':'color:#999'}}"
                          data-tab="{{index}}" data-name='{{item.title}}'
                          data-tabid="{{item.id}}" bindtap="handleTitleTab">{{item.title}}</button>
                </form>
                
            </view>
        </scroll-view>
        <view style="height:88rpx;width:50rpx;display:inline-block;background:#ffffff;position:fixed;z-index:25;right:120rpx"></view>
        <form name='pushMsgFm' report-submit='true' bindsubmit='getFormID' >
        <button  form-type="submit" class='btnForm' data-current="{{dataTab.length}}" data-name='{{item.title}}' hover-class='none' 
              data-tabid="{{dataTab.length}}" bindtap="selectMy" style="height: 88rpx;width:120rpx;position:fixed;z-index:27;line-height:122rpx;display: inline-block; right:0;">
            <image src="/images/my.jpg" style="width:120rpx;height: 88rpx;" data-id="{{dataTab.length}}" ></image>
        </button>
        </form>
    </view>

    <block>
    
        <view class="lineTop"></view>
        <!--<view wx:if="{{upLoad}}" class="lineTop1"  style="text-align: center;z-index: 27;{{iPhoneX?'top:300rpx;':'top:220rpx'}}">加载中。。。</view>-->
        <!--<view wx:else></view>-->
    </block>

    <scroll-view scroll-y="true" class="contentListBox" scroll-top="{{scrollTop}}" >
        <view bind:touchstart="handleTouchStart"
            bind:touchend="handleTouchEnd">
            <block> 
                <view wx:if="{{currentTabIndex ==0}}" >
                
                    <image wx:if="{{isNew}}" src="/images/new.png" class="bigBox" style="width:91%;height:430rpx"></image>
                </view>
                    
                <view>
                    
                    <template is="list" data="{{list:lists[currentTabIndex].items,heightFlag:heightFlag,isMore:lists[currentTabIndex].__hasMore !== false}}"/>
                </view>
            </block>


        </view>

    </scroll-view>
    <!--</view>-->
</view>
<view>

</view>
<view wx:if="{{isModal}}" style="position: fixed;top:0;bottom:0;right: 0;left:0;z-index: 30;background-color: #242424;">
        <image src="/images/1.png" style="width:550rpx;height:348rpx;margin-left: 70rpx "></image>
        <view style="font-size: 24rpx;color: #333333;background: #dedede;width:500rpx;margin-left: 80rpx;text-align: center;margin-top: 40rpx">
            <view style="height: 70rpx;line-height: 70rpx;color:#999">转发</view>
            <view style="height: 70rpx;line-height: 70rpx;border-bottom: 1px solid #333333;border-top: 1px solid #333333">添加到我的小程序</view>
            <view style="height: 70rpx;line-height: 70rpx;color:#999">关于{{appTitle}}</view>
        </view>
        <view style="position: relative">
            <image src="/images/2.png" style="width:600rpx;height:180rpx;margin-left: 70rpx;margin-top: 40rpx  "></image>
            <text style="color: #ffffff;font-size: 24rpx;position: absolute;top:48rpx;left:400rpx;">{{appTitle}}</text>
        </view>
        <view style="font-size: 24rpx;color: #888888;width:500rpx;margin-left: 120rpx;">我的小程序 > </view>
        <image src="{{coverUrl}}" style="width: 60rpx;height: 60rpx;border-radius: 50%;margin-left: 120rpx;margin-top: 20rpx"></image>
         <image src="/images/3.png" style="width:600rpx;height:60rpx;margin-left: 70rpx;"></image>
        <view style="text-align: center">
            <button style="background: #ffffff;width: 200rpx;height: 80rpx;line-height:80rpx;border-radius: 40rpx;text-align: center;margin-top:20rpx" bindtap="handleClose">
                我知道了</button>
        </view>



</view>




